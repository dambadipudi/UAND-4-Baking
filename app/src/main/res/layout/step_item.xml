<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_step_image"
            android:layout_width="@dimen/step_image_size"
            android:layout_height="@dimen/step_image_size"
            android:adjustViewBounds="true"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:contentDescription="@string/recipe_content_description"
            android:background="@drawable/ic_recipe" />

        <TextView
            android:id="@+id/tv_step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/recipe_left_margin"
            android:layout_marginStart="@dimen/recipe_left_margin"
            android:layout_marginTop="@dimen/recipe_name_top_margin"
            android:layout_toRightOf="@+id/iv_step_image"
            android:layout_toEndOf="@+id/iv_step_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>